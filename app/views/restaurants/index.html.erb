<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>
<% @restaurants.each do |r| %>
  <h2><%= r.name %></h2>
  <p><%= r.address %>
  <p><%= r.phone_number %>
  <%= link_to "Delete", restaurant_path(r),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
<% end %>
